<?xml version="1.0" encoding="UTF-8"?>
<project name="HK2"
         xmlns="http://maven.apache.org/DECORATION/1.3.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

    <!-- logo banner on all pages -->
    <bannerLeft>
        <!-- Reflow Maven Skin, but with "Reflow" highlighted -->
        <name><![CDATA[<span class="gf-orange">HK2</span>]]></name>
        <href>index.html</href>
    </bannerLeft>

    <publishDate position="bottom" format="yyyy-MM-dd" />
    <version position="none" />
    <googleAnalyticsAccountId>UA-3160303-1</googleAnalyticsAccountId>

    <skin>
        <groupId>lt.velykis.maven.skins</groupId>
        <artifactId>reflow-maven-skin</artifactId>
        <version>1.0.0</version>
    </skin>

    <custom>
        <reflowSkin>
            <!-- =============== Global skin configuration ================= -->

            <!-- Make this to 'false' for local development, i.e. file:// URLs -->
            <!-- TODO change to 'true' before final site generation, set to 'false' for local testing -->
            <protocolRelativeURLs>false</protocolRelativeURLs>

            <!-- Comment this out for local development. -->
            <!-- TODO uncomment before final site generation, comment our for local testing -->
            <!--<absoluteResourceURL>https://hk2.java.net</absoluteResourceURL>-->
            <!--<absoluteResourceURL>file://${basedir}/target/site</absoluteResourceURL>-->

            <!-- Brand on the top menu bar -->
            <brand>
                <name>
                    <![CDATA[
                        <span class="gf-orange">HK2</span><span> - Dependency Injection Kernel</span>
                    ]]>
                </name>
                <href>index.html</href>
            </brand>

            <!-- Slogan appears under the Head logo -->
            <slogan>A light-weight and dynamic dependency injection framework</slogan>

            <!-- Syntax highlighting Configuration -->
            <highlightJs>true</highlightJs>
            <highlightJsTheme>solarized_dark</highlightJsTheme>

            <!-- Skin theme -->
            <theme>default</theme>
            <!--<theme>bootswatch-cosmo</theme>-->

            <!-- Top navbar configuration -->
            <topNav>Documentation|Download</topNav>

            <!-- Bottom nav configuration -->
            <bottomNav maxSpan="9">
                <column>Main</column>
                <column>Documentation</column>
                <column>Project Info</column>
            </bottomNav>

            <toc>false</toc>

            <!-- Misc Configuration -->
            <smoothScroll>false</smoothScroll>
            <skinAttribution>false</skinAttribution>
            <bottomDescription quote="false">
                <![CDATA[
                    <center>
                        <a href="https://glassfish.java.net" style="border:0; display:block">
                            <img src="images/glassfish_logo.png" style="width:200px; margin-bottom:20px;">
                        </a>
                        HK2 is member of <a href="https://glassfish.java.net">GlassFish</a> project.
                    </center>
                ]]>
            </bottomDescription>

            <!-- Per-Page Configuration (allows overriding of global) -->
            <pages>
                <!-- index.html -->
                <index>
                    <sections>
                        <body />
                        <columns>2</columns>
                    </sections>
                </index>
                
                <!-- contribute.html -->
                <contribute>
                    <sections>
                        <body />
                        <columns>3</columns>
                    </sections>
                </contribute>
            </pages>
        </reflowSkin>
    </custom>

    <body>
        <head>
            <link href="https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet" />
        </head>
        <menu name="Main">
            <item name="Home" href="index.html" />
            <item name="License" href="license.html" />
            <item name="Contribute" href="contribute.html" />
        </menu>
        <menu name="Documentation">
            <item name="Getting started" href="develop.html" />
            <item name="API overview" href="api.html"/>
            <item name="API javadoc" href="apidocs/index.html" />
        </menu>
        <menu name="Project Info">
            <item name="Source Control" href="source-repository.html" />
            <item name="Issue Tracking" href="issue-tracking.html" />
            <item name="Mailing Lists" href="mail-lists.html" />
            <item name="Project Team" href="team-list.html" />
        </menu>
    </body>
</project>
