<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.sun.enterprise</groupId>
        <artifactId>hk2-parent</artifactId>
        <version>0.2-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    
    <artifactId>hk2-core</artifactId>
    <name>HK2 core module</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestEntries><!-- Make it an OSGi Fragment bundle -->
                            <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                            <Bundle-SymbolicName>
                            ${pom.groupId}.${pom.artifactId}
                            </Bundle-SymbolicName>
                            <Bundle-Name>${pom.name}</Bundle-Name>
                            <Bundle-Version>${hk2-osgi-version}</Bundle-Version>
                            <!-- Fragment-Host specifies the host bundle
                            this fragment attaches to, which
                            in our case is hk2 bundle -->
                            <Fragment-Host>
                            ${pom.groupId}.hk2;bundle-version="[${hk2-osgi-version}, ${hk2-osgi-version}]"
                            </Fragment-Host>
                            <Export-Package>
                            com.sun.enterprise.module;
                            com.sun.enterprise.module.bootstrap;
                            com.sun.enterprise.module.common_impl;
                            com.sun.enterprise.module.impl;version=${hk2-osgi-version}
                            </Export-Package>
                            <Import-Package>
                            com.sun.enterprise.module;
                            com.sun.enterprise.module.bootstrap;
                            com.sun.enterprise.module.common_impl;
                            com.sun.enterprise.module.impl;
                            org.jvnet.hk2.config;
                            com.sun.hk2.component;
                            org.jvnet.hk2.component;
                            org.jvnet.hk2.annotations;
                            version="[${hk2-osgi-version}, ${hk2-osgi-version}]"
                            </Import-Package>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.sun.enterprise</groupId>
            <artifactId>config</artifactId>
            <version>${project.parent.version}</version>            
        </dependency>
      <dependency>
          <groupId>javax.xml.stream</groupId>
          <artifactId>stax-api</artifactId>
          <version>1.0-2</version>
      </dependency>
    </dependencies>

</project>
