<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>com.sun.enterprise</groupId>
    <artifactId>hk2-parent</artifactId>
    <version>0.2-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>hk2</artifactId>
    <packaging>hk2-jar</packaging>
    <name>HK2 module of HK2 itself</name>
    <description>This is so that other modules can depend on HK2 as an HK2 module.</description>

    <build>
        <plugins>
            <plugin>
                <groupId>com.sun.enterprise</groupId>
                <artifactId>hk2-maven-plugin</artifactId>
                <version>${project.version}</version>
                <extensions>true</extensions>
                <configuration>
                  <archive>
                    <manifestEntries> <!-- Make it an OSGi bundle -->
                      <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                      <Bundle-Name>${pom.name}</Bundle-Name>
                      <Bundle-SymbolicName>${pom.groupId}.${pom.artifactId}</Bundle-SymbolicName>
                      <!-- Note OSGi version uses .SNAPSHOT instead of -SNAPSHOT -->
                      <Bundle-Version>${hk2-osgi-version}</Bundle-Version>
                      <Export-Package>
                          org.jvnet.hk2.component;
                          org.jvnet.hk2.annotations;
                          com.sun.hk2.component;
                          org.jvnet.hk2.config;
                          com.sun.enterprise.module;
                          com.sun.enterprise.module.bootstrap;
                          com.sun.enterprise.module.common_impl;
                          com.sun.enterprise.module.impl;
                          version=${hk2-osgi-version}
                      </Export-Package>
                    </manifestEntries>
                  </archive>
                </configuration>

            </plugin>
            <plugin>
                <!-- Copy all the classes from individuals modules
                     TODO (Sahoo):
                     There got to be a better way of assembling modules
                     (e.g. maven-assembly-plugin)
                     which I don't know how to use. So, for the moment
                     just copy classes from other modules/target/classes
                     using an Ant task -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                  <execution>
                    <id>assemble-jar</id>
                    <phase>process-classes</phase>
                    <goals>
                      <goal>run</goal>
                    </goals>
                    <configuration>
                        <tasks>
                            <mkdir dir="target/classes"/>
                            <copy todir="target/classes">
                                <fileset dir="../auto-depends/target/classes"/>
                                <fileset dir="../config/target/classes"/>
                                <fileset dir="../core/target/classes"/>
                            </copy>
                        </tasks>
                    </configuration>
                  </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <!-- This dependency is really not needed, it should be removed - Sahoo-->
    <dependencies>
        <dependency>
            <groupId>com.sun.enterprise</groupId>
            <artifactId>hk2-core</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

</project>
